
<h1>Add Wine</h1><br><br>

<div class="form-horizontal">
  <%= form_for(@wine) do |f| %>
  <div class="form-group">
    <%= f.label :maker , class: "control-label col-sm-2"%>
      <div class="col-sm-10">
        <%= f.text_field :maker %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :wine_type, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :wine_type %>
      </div>
  </div>
  <div class="form-group">
  <%= f.label :region, class: "control-label col-sm-2"%>
  <div class="col-sm-10">
  <%= f.text_field :region %>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :vintage, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.text_field :vintage %>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :price, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.text_field :price %>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :rating, class: "control-label col-sm-2"%>
  <div class="col-sm-10">
  <%= f.select :rating, (1..5) %>
  </div>
  </div>
<%=f.submit %>
<% end %>

</div>
